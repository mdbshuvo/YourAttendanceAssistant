<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdmissionActivity"
    android:background="@drawable/galaxy_background"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/search_admission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Enter a class name"
        android:visibility="gone">


    </SearchView>

    <TextView
        android:id="@+id/title_admission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a class"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#002cdc"
        android:background="@color/colorAccent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/note_no_data_admission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_class"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#efefef"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/admission_list_sample_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Class Name"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/admission_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#143961"
        android:dividerHeight="5dp"
        tools:listitem="@layout/admission_list_sample">


    </ListView>

</LinearLayout>