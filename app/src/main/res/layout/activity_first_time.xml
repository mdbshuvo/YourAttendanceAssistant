<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstTime"
    android:orientation="vertical"
    android:background="@drawable/galaxy_background"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center">

        <Button
            android:id="@+id/login_loginbutton"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textStyle="bold"
            android:backgroundTint="#0f93ff"
            android:textSize="30dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/login_signupbutton"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:backgroundTint="#07e1da"
            android:textSize="30dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/login_continuebutton"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue without creating account"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>